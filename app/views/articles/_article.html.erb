<div id="<%= dom_id article %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= article.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Content:</strong>
    <%= article.content %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Summary:</strong>
    <%= article.summary %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Published at:</strong>
    <%= article.published_at %>
  </div>
</div>
