<div id="<%= dom_id article %>" class="max-w-2xl mx-auto px-4 my-8 space-y-6">
  <h1 class="text-3xl font-bold text-center text-gray-800">
    <%= article.title %>
  </h1>
  
  <div class="text-sm text-gray-500 text-center">Read time: <%= reading_time(article.content) %></div>

  <div class="text-sm text-gray-500 text-center">
    Published on <%= article.published_at.strftime("%B %d, %Y") %>
  </div>
  
  <div class="prose prose-lg mx-auto">
    <%= article.content %>
  </div>
</div>